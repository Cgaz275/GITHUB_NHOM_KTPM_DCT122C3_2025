{
  "version": 2,
  "projectNameAndRootFormat": "derived",
  "plugins": [],
  "defaultProject": "evershop",
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "lint": {
      "cache": true,
      "inputs": ["default", "^default"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.test.tsx",
      "!{projectRoot}/**/*.spec.tsx",
      "!{projectRoot}/jest.config.js",
      "!{projectRoot}/.eslintrc.json"
    ],
    "sharedGlobals": []
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "generators": {
    "@nx/react": {
      "@nx/react:component": {
        "style": "css"
      }
    }
  }
}
